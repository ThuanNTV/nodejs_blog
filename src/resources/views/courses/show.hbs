  <div class="row">
    <div class="col-lg-3">
      <button>Learn</button>
    </div>
    <div class="col-lg-9">
      <h1>{{course.name}}</h1>
      <iframe
        width="704"
        height="396"
        src="https://www.youtube.com/embed/{{course.videoId}}"
