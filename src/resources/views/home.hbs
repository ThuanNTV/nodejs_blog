<div class="mt-4">
  <div class="row">
    {{#each courses}}

      <div class="col-sm-6 col-lg-4">
        <div class="car">
          <a href="/courses/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.name}}"
            /></a>

          <div class="card-body">
            <a href="/courses/{{this.slug}} ">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.desc}}</p>
            <a href="/courses/{{this.slug}}" class="btn btn-primary">Join Course</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>